---
interface Props {
    job: {
        date: string;
        title: string;
        description: string;
        company?: string;
    };
    horizontal?: boolean;
}

const { job, horizontal = false } = Astro.props as Props;
const { date, title, description, company } = job;
---

<li class={`group relative ${horizontal ? 'min-w-[280px] max-w-xs flex-shrink-0 snap-center mb-0 ms-0' : 'mb-10 ms-6'}`}>
    {!horizontal && (
        <div class="absolute w-3 h-3 bg-custom-purple rounded-full mt-2 -start-[30px] ring-4 ring-custom-purple/40 shadow-sm group-hover:scale-110 transition-transform"></div>
    )}
    <!-- Card -->
    <article class="relative overflow-hidden rounded-xl border border-white/20 bg-[#1c1233]/90 p-5 shadow-lg backdrop-blur-sm transition-colors group-hover:border-custom-purple/60">
        <div class="absolute inset-px rounded-lg pointer-events-none opacity-0 group-hover:opacity-100 bg-custom-purple/10 transition-opacity"></div>
        <header class="flex flex-col gap-1 mb-3">
            <time class="text-[11px] tracking-wide font-semibold text-white bg-gradient-to-r from-custom-purple to-custom-purple_darker px-2.5 py-0.5 rounded-full shadow w-fit">
                {date}
            </time>
            <h3 class="text-base md:text-lg font-bold text-white leading-snug">
                {title}
            </h3>
            {company && (
                <span class="text-[11px] font-semibold inline-flex items-center gap-1 px-2 py-1 rounded-md bg-custom-purple/90 text-white shadow-sm w-fit">
                    {company}
                </span>
            )}
        </header>
        <p class="text-[13px] md:text-sm leading-relaxed text-gray-200/90">
            {description}
        </p>
    </article>
</li>
